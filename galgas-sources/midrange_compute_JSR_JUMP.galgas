   end
#--- Change bit 12 ?
   let @midrange_call_goto_bit bit12
   if (flags & 0x1000) == 0 then
     bit12 = @midrange_call_goto_bit. noChange
   elsif (targetAddress & 0x1000) == 0 then
     bit12 = @midrange_call_goto_bit. clear
