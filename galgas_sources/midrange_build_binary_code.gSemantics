  when noChange :
  end switch ;
  switch mBit12 
  when set :
    emitMidrangeDirectCodeAtWordAddress
      ! 0x1000 | (4 << 7) | ([PCLATH_IPICregisterDescription mRegisterAddress] & 0x7F)
      !?ioAddress
      !"BCF PCLATH, 4"
      !?ioListFileContents
     ;
  when clear :
    emitMidrangeDirectCodeAtWordAddress
      ! 0x1400 | (4 << 7) | ([PCLATH_IPICregisterDescription mRegisterAddress] & 0x7F)
