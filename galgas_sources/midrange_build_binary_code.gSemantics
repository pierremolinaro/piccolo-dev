      !"BCF PCLATH, 4"
      !?ioListFileContents
     ;
  when noChange :
  end switch ;
  emit_midrange_CALLinstruction_nocheck !mTargetLabel->string !targetAddress !?ioAddress !?ioListFileContents ;
  switch mBit11 
  when set :
    emitMidrangeDirectCodeAtWordAddress
      ! 0x1000 | (3 << 7) | ([PCLATH_IPICregisterDescription mRegisterAddress] & 0x7F)
