semantics pic18_intermediate_classes_set_current_address :
import "pic18_intermediate_classes_instruction_length.gSemantics" ;

#----------------------------------------------------------------------------*

method @pic18_intermediate_instruction setCurrentAddress ?!@uint ioCurrentAddress :
  ioCurrentAddress := ioCurrentAddress + [selfcopy instructionLength] ;
end method ;

#----------------------------------------------------------------------------*

override method @pic18_intermediate_pseudo_ORG setCurrentAddress ?!@uint ioCurrentAddress :
  ioCurrentAddress := mOrigin ;
end method ;

#----------------------------------------------------------------------------*

end semantics ;
