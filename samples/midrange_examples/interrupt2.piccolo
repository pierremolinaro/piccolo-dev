#                              RAM                                           *
#                                                                            *
#----------------------------------------------------------------------------*

ram gpr0 {
  byte itSave0 [2]
}

#----------------------------------------------------------------------------*

ram gprnobnk {
  byte itsave1
}

#----------------------------------------------------------------------------*
